.hero-unit
  %h1 Discuss It!
  %p Online article discussion tracker website for locating online discussions about a given article.
  .row-fluid
    .control-group
      %label.control-label{:for => "textinput"}
    .controls
      = form_tag static_pages_submit_path do
        = label_tag(:query, "Paste Here:")
        %input{:name => "query", :placeholder => "http://example.com/article.html", :type => "text", :required => true}/
        = submit_tag("Search", :class => "btn btn-primary btn-large")
  .row-fluid
    %h6 Suggested Searches
    %p.suggested= link_to'Yahoo wins motion to declassify PRISM court case docs.', "/static_pages/submit?query=http://news.cnet.com/8301-1023_3-57593871-93/yahoo-wins-motion-to-declassify-court-documents-in-prism-case/"
    %p.suggested= link_to'Why Stephen King spends months or years on his opening sentences.', "/static_pages/submit?query=http://www.theatlantic.com/entertainment/archive/2013/07/why-stephen-king-spends-months-and-even-years-writing-opening-sentences/278043/"
    %p.suggested= link_to'Ubuntu starts $32 Million crowdfunding campaign for new phone.', "/static_pages/submit?query=http://www.indiegogo.com/projects/ubuntu-edge?c=activity#"

%hr